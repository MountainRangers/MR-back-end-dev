<!-- Navigation -->
{{> navbar }}

<!-- Filter bar  visible-->
<div id='filter-bar' class='filter'>
  <div class='filter-components'>
    <p class='filter-component half filter-call'>Filter by category</p>
    <button class='down-arrow filter-component half'>
      <img src='/images/nav_images/down_arrow.png'/>
    </button>
  </div>

  <!-- Filter bar hidden -->
  <div id='filter-drop-down' class='hidden drop-down'>
    <div class='tag-icon'><img src='/images/tag_images/desert.png' class='icon background'/></div>
    <div class='tag-icon'><img src='/images/tag_images/feather.png' class='icon background'/></div>
    <div class='tag-icon'><img src='/images/tag_images/lake.png' class='icon background'/></div>
    <div class='tag-icon'><img src='/images/tag_images/urban.png' class='icon background'/></div>
    <div class='tag-icon'><img src='/images/tag_images/tree.png' class='icon background'/></div>
    <div class='tag-icon'><img src='/images/tag_images/all.png' class='icon background'/></div>
  </div>
</div>

<!-- Beginning of timeline feed -->
<div class='time-line'>
  {{#each posts}}
    <article class='post' data-tag="{{tag_name}}">
      <div class='tl-user-info third'>
        <a href='/profile/{{id}}'>
          <img class='profile-img-placeholder' src='{{photo_url}}' alt='User Profile Photo'>
          <p class='tl-user-name'>{{username}}</p>
        </a>
      </div>
      <div class='tl-hike-info third'>
        <a href="/post/{{post_id}}">
          <h1 class='tl-hike-name'>{{post_title}}</h1>
        </a>
        <p class='tl-hike-location'>{{lat}}, {{long}}</p>
      </div>
      <div class='tl-tag third' data-tag="{{tag_name}}">
        <img src='/images/tag_images/{{tag_name}}.png' class='icon'/>
      </div>
    </article>
  {{/each}}
</div>  <!-- End of timeline feature -->

<!-- Footer -->
<footer class='app-footer'>
  <p>Copyright, Mountain Rangers 2016. All rights reserved.</p>
</footer>

<script src="/javascripts/timeline.js" type="text/javascript"></script>
